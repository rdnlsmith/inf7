<% in_table = false -%>
<% lines.each.with_index(1) do |line, j| %>
  <% line = line.rstrip %>
  <% if !line_nos and line.match(/\A\s*\*:/) %>
    <% example = CGI.escapeHTML(example_pasties.shift.map {|l| l.sub(/\A\t?/,'')}.join('\n').lstrip) %>
    <% line.sub!(/\*:\s*/, %Q{#{$1}<a href="javascript:copyCode(`#{example}`)"><img border="0" src="#{File.join(Inf7::Conf.doc, 'doc_images/paste.png')}"></a> }) %>
  <% end %>
  <% if line.match(/\A(\s*)(<[^>]+>)?(\s+)(\S.*)\Z/) %>
    <% leading_whitespace, initial_tag, initial_whitespace, rest = $1, $2, $3, $4 %>
    <% initial_whitespace = initial_whitespace + (leading_whitespace || "") %>
    <% initial_whitespace.gsub!(/\t/, '   ') %>
    <% initial_whitespace = ' ' + '&ensp;' * (initial_whitespace.length - 1) %>
    <% line = (initial_tag || "") + initial_whitespace + rest.gsub(/\t+/,"\t") %>
  <% end %>
  <% if in_table -%>
    <% if !line.match(/\A(\s|&ensp)*\Z/) and !line.match(/with\s+(?:\d+\s+)?blank\s+row/) -%>
      <tr><% if line_nos -%><td class="line-number"><%= j %><% else -%><td>&ensp;<% end -%></td><td class="line"<% if line_nos %> id="line<%= j %>"<% end %>><%== line.gsub(/\t/, "</td><td>") %></td></tr>
    <% else -%>
      <% in_table = false -%>
      </tbody></table><table class="source-table"><tbody><tr><% if line_nos -%><td class="line-number"><%= j %><% else -%><td>&ensp;<% end -%></td><td class="line"<% if line_nos %> id="line<%= j %>"<% end %>><%== line %></td></tr>
    <% end -%>
  <% else -%>
    <% if line.match(/\A(?:<[^>]+>)?(\s|&ensp;)*Table\s+(?:of|\d+(?:\.\d+)?)\b/) %>
      <% in_table = true -%>
      <tr><% if line_nos -%><td class="line-number"><%= j %><% else -%><td>&ensp;<% end -%></td><td class="line"<% if line_nos %> id="line<%= j %>"<% end %>><%== line %></td></tr></table><table class="source-table"><tbody>
    <% else -%>
      <tr><% if line_nos -%><td class="line-number"><%= j %><% else -%><td>&ensp;<% end -%></td><td class="line"<% if line_nos %> id="line<%= j %>"<% end %>><%== line %></td></tr>
    <% end -%>
  <% end -%>
<% end -%>
