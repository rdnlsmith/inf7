html {
    font-size: 100%;
    -webkit-text-size-adjust: 100%;
    -ms-text-size-adjust: 100%;
}

section { page-break-after: always; }

body {
    font-family: serif;
    padding: 5%;
    text-align: left;
    line-height: 1.5;
    width: 38rem;
    background-color: #F0F0F0;
    color: #111;
    font-size: medium;
}

h1 { text-align: left; }
h2 { text-align: left; }
h3 { text-align: left; }
h4 { text-align: left; }
h5 { text-align: left; }
h6 { text-align: left; }

h1.title {
    margin-top: 0;
    text-align: center;
}

p.author {
    text-align: center;
}

ol.toc {
    padding: 0;
    margin: 1em 0;
    padding: 0 0 0 2em;
}

ul.toc ul, ol.toc ol {
    margin: .3em 0;
}

li { margin: 0; padding: 0 .33rem; }

code {
    font-family: monospace;
    background-color: rgb(247, 247, 247);
}

pre {
    font-family: monospace;
    padding: 1rem;
    overflow: auto;
    border-radius: 3px;
    background-color: rgb(247, 247, 247);
}

div.code { background-color: #E6E6E6;
	   font-family: monospace;

	   margin-top: 1.5rem; margin-bottom: 1.5rem;
	   padding-top: 1.5rem; padding-bottom: 1.5rem;
	   margin-left: -1.5rem; margin-right: -1.5rem;
	   padding-left: 1.5rem; padding-right: 1.5rem;
	 }
div.code > *:last-child { margin-bottom: 0; }
div.linkback { margin-top: 0; margin-bottom: 1.5rem; text-align: right; }
span.example-summary { font-size: 1.2rem; font-weight: bold; }
span.example-short-start { font-weight: bold; }
details.full-example > summary { font-weight: bold; }
div.code > p.quoted:first-child { margin-top: 0; padding-top: 0; }
