.toc-head { margin-top: 0; margin-bottom: 3rem; }

html { font-size: 100%; }

main {
  width: 42rem;
margin: auto;
}

body {
    color: #000;
background-color: #FAFAF0; 
font-family:  'Public Sans', Arial, Helvetica, sans-serif;
  font-size: 1rem;
  line-height: 1.5;
  margin: auto;
}

section { margin: 0; padding: 0 }

p, ul, ol, pre, table, blockquote  {
  margin-top: 0rem;
  margin-bottom: 1.5rem;
}
ul ul, ol ol, ul ol, ol ul {
  margin-top: 0rem;
  margin-bottom: 0rem;
}

hr, .hr {
  border: 1px solid;
  margin: -1px 0;
}
b, i, strong, em, small, code {
  line-height: 0;
}
sub, sup {
  line-height: 0;
  position: relative;
  vertical-align: baseline;
}
sup {
  top: -0.5em;
}
sub {
  bottom: -0.25em;
}
a { line-height: 1.5; }
