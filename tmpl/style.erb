.index-navbar { font-family: sans-serif; font-size: 1.33rem; font-weight: bold; }
table.source-table { border-collapse: collapse; font-family: 'Public Sans', Arial, Helvetica, sans-serif; }
table.source-table td { vertical-align: bottom; padding-left: .75rem; }
