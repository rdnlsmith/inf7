.toc h1 { text-align: center; }

.title { text-align: center; }

h1.title { 
  font-size: 4.16rem;
  line-height: 4.5rem;
  margin-top: 1.5rem;
  margin-bottom: 3rem;
}
h1, .h1 {
/*  font-size: 2.625rem;*/
 font-size: 3.13rem;
  line-height: 3rem;
  margin-top: 3rem;
  margin-bottom: 3rem;
  text-align: center;
}
h2 {
/*  font-size: 2.625rem;*/
  font-size: 2.35rem;
  line-height: 3rem;
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
 }
h3, .toc-volume {
/*  font-size: 1.625rem;*/
  font-size: 1.76rem;
  line-height: 3rem;
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
}
.toc-volume {
font-weight: bold;
}


h4, span.toc-chapter {
/*  font-size: 1rem;*/
  font-size: 1.33rem;
  line-height: 1.5rem;
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
}
h5, .h5 {
  font-size: 1rem;
  line-height: 1.5rem;
  margin-top: 1.5rem;
  margin-bottom: 0rem;
  font-weight: bold;
}

.toc-chapter {
    font-size: 1.625rem;
    line-height: 1.5;
}
div.toc-section {
    font-size: 1.33rem;
  line-height: 1.5;
  margin-top: .5rem;
  padding-left: 2rem;
  margin-bottom: .5rem;
}
div.linkback { margin-top: 0; margin-bottom: 1.5rem; text-align: right; }

details.chapter-details {
    padding-left: 2rem;
    margin-bottom: .5rem;
}

details.full-example > div {
    padding-top: 1.5rem;
}

div.crossreference, p, ul, ol, pre, table, blockquote {
    margin-right: 1rem;
    margin-left: 1rem;
}

table.codetable { border-collapse: collapse; width: 40rem; }

div.code { background-color: #E6E6E6; color: #000;  font-family: "Go", sans-serif; margin-right: 0; margin-left: 0; margin-top: 1.5rem; margin-bottom: 1.5rem; }

.code p { margin-left: 0; margin-right: 0; padding-left: 1rem; padding-right: 1rem; }

div.code > *:last-child { margin-bottom: 0; }

div.code { padding-top: 1.5rem; padding-bottom: 1.5rem; }

img.bordered { display: block; margin-left: auto; margin-right: auto; margin-top: 2rem; margin-bottom: 2rem; }

td.quotedtablecell { border-right: thin dotted #555; vertical-align: top; }
td.quotedtablecell:first-child { border-left: thin dotted #555; vertical-align: top; }
table.codetable tbody tr { border-bottom: thin dotted #555; }
table.codetable tbody  { border-bottom: thin dotted #555; }
table.codetable tbody tr:last-child { border-top: thin dotted #555; border-bottom: thin dotted #555; }
table.codetable tbody tr:first-child { border-top: thin dotted #555; }

/* adapted from general index css */

div.indexentry span.indexgloss { color: green; font-style: italic; }
div.indexentry span.indexsayphrase { color: blue; }
div.indexentry a.indexlinkalt { color: gray;  font-style: italic; }
div.indexentry span.indexphrasebracketed { color: purple; font-style: italic; }

.nav-left::before { content: '← '; }
.nav-right::after { content: ' →'; }

div.indexentry a.indexlinkalt, span.indexgloss, span.indexsee, span.indexsourceargbracketed, span.indexphrasebracketed, span.indexifphrasebracketed, span.indexsayphrasebracketed, span.indexoutphrasebracketed, span.indexassertbracketed, span.indexrbbracketed, span.indexpropbracketed, span.indexpropcatbracketed, span.indexadjbracketed, span.indexrelbracketed, span.indexrelcatbracketed, span.indexglobbracketed, span.indexactvarbracketed, span.indexconstbracketed, span.indexactionbracketed, span.indexexample, span.indextitle, span.indextokenbracketed { font-style: italic; }

div.indexentry { font-family: sans-serif; padding-top: .3rem; }

div.indexentry span.indexsource, span.indexsourcearg, span.indexsourcepartbracketed, indexphrase, span.indexifphrase, span.indexsayphrase, span.indexoutphrase, span.indexassert, span.indexrb, span.indexprop, span.indexpropcat, span.indexadj, span.indexrelverb, span.indexglob, span.indexactvar, span.indexconst, span.indexaction, span.indexactivity, span.indexactivitycat, span.indexdescactivity, span.indexofsourcebracketed, span.indexuseopt, span.indextoken { font-family: "JetBrains Mono", monospace;  }

div.indexentry span.indexcommand, indextestcmd, indexcommandpartbracketed { font-family: serif; }


p.indexentry {
    margin-bottom: 0; margin-top: 0; margin-right: 0; 
}

p.indent0 { font-size: 1.3rem; margin-left: 0rem; margin-top: 1rem; }
p.indent1 { font-size: 1.1rem; margin-left: 2rem; padding-bottom: 0rem;}
p.indent2 { margin-left: 4rem; padding-bottom: 0rem; margin-bottom: 0;}
p.indent3 { margin-left: 6rem; padding-bottom: 0rem; margin-bottom: 0;}

main { margin-bottom: 3rem; }

div.subheading { text-align:center; font-size: 1.73rem; padding: 0; }
div.undersubheading { font-size: 1.44rem; padding: 0; }
a.example-link { font-weight: bold; }
div.example-linkback { text-align: right; }
